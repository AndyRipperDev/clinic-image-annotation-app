{
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react",
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext"
        ],
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "strict": true,
        "sourceMap": true,
    },
    "include": [
        "src",
        ".eslintrc.json",
    ],
    "exclude": [
        "node_modules"
    ]
}